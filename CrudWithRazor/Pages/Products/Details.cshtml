@page
@model CrudWithRazor.Pages.Products.DetailsModel
@{
	ViewData["title"] = "Details";
}

<h3>@ViewData["title"]</h3>
<hr/>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label asp-for="Products.ProductName" class="control-label"></label>
				<input asp-for="Products.ProductName" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Products.Price" class="control-label"></label>
				<input asp-for="Products.Price" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Products.Qty" class="control-label"></label>
				<input asp-for="Products.Qty" readonly class="form-control" />
			</div>
			<div class="form-group mt-2">
				<a class="btn btn-success" asp-page="Index">Product List</a>
			</div>
		</form>
	</div>
</div>
